<UserControl x:Class="Tenpad.Core.Views.DefaultTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tenpad.Core.Views"
             xmlns:services="clr-namespace:Tenpad.Core.Services"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid >
        <Rectangle>
            <Rectangle.Fill>
                <LinearGradientBrush>
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF1A3E37" Offset="0"/>
                    <GradientStop Color="#FF361B1B" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <ContentControl Content="{Binding PageViewModel}"
                        Margin="0,0,0,0"
                        ClipToBounds="True">
            <ContentControl.ContentTemplateSelector>
                <services:TemplateSelector/>
            </ContentControl.ContentTemplateSelector>
        </ContentControl>
    </Grid>
</UserControl>
