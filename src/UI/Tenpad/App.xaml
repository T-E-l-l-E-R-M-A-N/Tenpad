                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                Margin="-2,0,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ToggleButton Width="24"
                                      Height="24"
                                      Margin="5,0"
                                      BorderThickness="0"
                                      IsChecked="{Binding IsPinned, Mode=TwoWay}">
                                        <Image Margin="4">
